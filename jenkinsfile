pipeline {

 agent any 
        parameters {
           string (name :'NAME' , description : 'enter the name here')
           text (name : 'DESCRIPTION' , description : 'enter your details here')

                    }
               stages {
               stage ('BUILD') {
                         steps {
                          echo " NAME ${params.NAME} "
                             sh 'echo ${params.NAME} '
                              }
                                }
                stage ('TEST') {
                              steps {
                                sh 'du -h'
                               }
                     }
}

}

                    
                               
                  
                     
             
